<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/friend_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/bolder_style4"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chat_room_friend_image"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/color"
            app:civ_border_color="#000000"
            app:civ_border_width="0.8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friend_chat_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bolder_style3"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="#000000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/friend_message"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/bolder_style5"
                android:gravity="center"
                android:textColor="#000000" />

        </LinearLayout>


        <TextView
            android:id="@+id/friend_message_time"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="7dp"
            android:gravity="left"
            android:maxLength="19"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:id="@+id/friend_iv"
        android:layout_width="150dp"
        android:layout_height="150dp" />

</LinearLayout>