<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bolder_style5"
    android:orientation="horizontal" android:layout_width="350dp"
    android:layout_height="95dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatroom_image"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/chat2"
        app:civ_border_color="#000000"
        app:civ_border_width="0.8dp" />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="3"
                android:id="@+id/open_chatroom_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="aaaaaaaaaaaaaaa"
                android:textColor="#000000"
                android:textSize="15sp" />



        </LinearLayout>
        <TextView
            android:maxLines="1"
            android:id="@+id/open_chatroom_entitle"
            android:layout_width="211dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            android:textColor="#000000"
            android:textSize="13sp" />


    </LinearLayout>

</LinearLayout>