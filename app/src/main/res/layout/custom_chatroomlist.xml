<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bolder_style5"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="95dp">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatroom_image"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/chat2"
        app:civ_border_color="#000000"
        app:civ_border_width="0.8dp" />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="1"
                android:id="@+id/chatroom_subject"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="aaaaaaaaaaaaaaa"
                android:textColor="#000000"
                android:textSize="13sp" />

            <Button
                android:textColor="#000000"
                android:background="#c5b8b8"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/chatroom_number_of_member"
                android:textSize="14sp"
                android:text="200"
                android:layout_marginLeft="15dp"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:maxLength="19"
                android:id="@+id/chatroom_time"
                android:textColor="#000000"
                android:textSize="11sp"
                android:text="2018/04/21 오후 4:10"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="match_parent" />


        </LinearLayout>


        <TextView
            android:maxLines="1"
            android:id="@+id/chatroom_front_message"
            android:layout_width="211dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
            android:textColor="#000000"
            android:textSize="13sp" />


    </LinearLayout>
</LinearLayout>