<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coma.idealist.www.javachattest7.coma.idealist.www.javachattest7.login">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debat chat 로그인"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/bn_login"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#456782"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"/>


    <TextView
        android:layout_gravity="center"
        android:id="@+id/reg_txt"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#1eabab"
        android:textColor="#106312"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="아이디가 없으신가요? 회원가입 하세요!"
        android:gravity="center_horizontal"/>

</LinearLayout>
