<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="coma.idealist.www.javachattest7.coma.idealist.www.javachattest7.loginsuccess">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bolder_style"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Li_nickname"
                    android:layout_width="119dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Button_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="Idealist"
                        android:textColor="#000000"
                        android:textSize="14sp" />


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="19dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/edit5"
                        app:civ_border_color="#000000"
                        app:civ_border_width="0dp" />

                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/Button_profilechange"
                    android:layout_width="121dp"
                    android:layout_height="85dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/color"
                    app:civ_border_color="#000000"
                    app:civ_border_width="0.8dp" />

                <LinearLayout
                    android:id="@+id/Li_logout"
                    android:layout_width="121dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Button_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="로그아웃"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/logout"
                        app:civ_border_color="#000000"
                        app:civ_border_width="0dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/debate_article_reading"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#f2ed86"
                    android:gravity="center"
                    android:hint="기사"
                    android:padding="10dp"
                    android:textColor="#050505"
                    android:textColorHint="#050505"
                    android:textSize="13sp" />

                    <TextView
                        android:id="@+id/unity_game"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#9e9ee6"
                        android:gravity="center"
                        android:hint="게임"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/music"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#6ca173"
                        android:gravity="center"
                        android:hint="음악"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/debate_board"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1.5"
                        android:background="#f58d8d"
                        android:gravity="center"
                        android:hint="토론 게시판"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/ethereum_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:background="#92ac90"
                        android:gravity="center"
                        android:hint="이더지갑"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/debate_open_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#edb8cf"
                        android:gravity="center"
                        android:hint="실시간 토론 채팅"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/debate_broad_cast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#c4bf99"
                        android:gravity="center"
                        android:hint="실시간 토론 방송"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dream_friend_apply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#aca4c6"
                        android:gravity="center"
                        android:hint="친구추가"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/dream_friend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#9fcfc3"
                        android:gravity="center"
                        android:hint="친구목록"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/dream_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="#e2ba9f"
                        android:gravity="center"
                        android:hint="채팅하기"
                        android:padding="10dp"
                        android:textColor="#050505"
                        android:textColorHint="#050505"
                        android:textSize="11sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/bolder_style"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dream_friend_apply_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bolder_style"
                    android:backgroundTint="#aca4c6"
                    android:gravity="center"
                    android:text="나를  토론 친추  하려는  사람들"
                    android:textColor="#000000" />


                <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#910e0e"
                        android:text="꿈 친추"
                        android:textSize="14sp"
                        />-->
                <ListView
                    android:id="@+id/dream_friend_apply_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#edebeb"
                    android:dividerHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dream_friend_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#910e0e"
                    android:text="꿈 친구"
                    android:textSize="14sp"
                    />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bolder_style"
                    android:backgroundTint="#9fcfc3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:text="토론친구프사"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:text="아이디"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:text="상태메세지"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/friend_room_invitation_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/bolder_style"
                        android:text="확인"
                        android:textSize="9sp"
                        android:visibility="gone" />


                </LinearLayout>


                <ListView
                    android:id="@+id/dream_friend_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#edebeb"
                    android:dividerHeight="10dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/dream_friend_chatlist_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bolder_style"
                        android:backgroundTint="#e2ba9f"
                        android:gravity="center"
                        android:text="토론 친구들과의 토론 채팅방"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/make_chatroom_with_friends"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/chat_image" />

                </LinearLayout>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#910e0e"
                    android:text="꿈 채팅"
                    android:textSize="14sp"
                    />-->

                <ListView
                    android:id="@+id/dream_friend_chat_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#edebeb"
                    android:dividerHeight="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dream_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <ScrollView
                    android:id="@+id/app_explanation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <include
                            layout="@layout/activity_music"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</FrameLayout>
