<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coma.idealist.www.javachattest7.Chat_Post_Comment">

    <ImageView
        android:id="@+id/img_to_comment_for"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lucid6" />

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#df34df"
            android:maxLength="10"
            android:lines="1"
            android:id="@+id/id_to_comment_for"
            android:layout_marginLeft="15dp"
            android:text="parkcsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_to_comment_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/id_to_comment_for"
            android:maxLength="20"
            android:lines="1"
            android:gravity="center"
            android:text="와 대박!! " />


    </RelativeLayout>
    <View
        android:background="#050504"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:lines="1"
            android:id="@+id/edt_comment_msg"
            android:layout_width="320dp"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_comment_msg_send"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/chat2"
            app:civ_border_width="0dp"
            app:civ_border_color="#000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>


    </LinearLayout>

    <View
        android:background="#050504"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>

    <ListView
        android:id="@+id/comment_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
